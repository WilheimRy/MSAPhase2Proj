<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FindYourFood.Views.RegisterPage">
  <StackLayout Padding = "25,50" >
    <Label x:Name="titleLabel" Text = "Register User" FontSize="38" HorizontalOptions = "Center"
			VerticalOptions="StartAndExpand" TextColor="#3498DB"/>
    <Entry x:Name = "usernameEntry" Placeholder="Username" HorizontalOptions = "Fill"
			VerticalOptions = "CenterAndExpand" />
    <Entry x:Name = "passwordEntry" Placeholder="Password" HorizontalOptions = "Fill" IsPassword="true"
			VerticalOptions = "StartAndExpand"/>
    <Entry x:Name = "passwordEntry2" Placeholder="Confirm Password" HorizontalOptions = "Fill" IsPassword="true"
  VerticalOptions = "StartAndExpand"/>

    <Button x:Name="registerButton" Text = "Register" Clicked="RegisterButton_OnClickedConfirm" HorizontalOptions = "Center"
            BackgroundColor="Blue"
			VerticalOptions = "StartAndExpand" FontSize="24"/>
  </StackLayout>
</ContentPage>